<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_take_picture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="TAKE PIC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView_taken"
        android:layout_width="354dp"
        android:layout_height="266dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/button_take_picture"
        app:layout_constraintStart_toStartOf="@+id/button_take_picture"
        app:layout_constraintTop_toBottomOf="@+id/button_take_picture"
        app:srcCompat="@mipmap/ic_launcher"
        tools:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/button_confirml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="CONFIRM"
        app:layout_constraintEnd_toEndOf="@+id/imageView_taken"
        app:layout_constraintStart_toStartOf="@+id/imageView_taken"
        app:layout_constraintTop_toBottomOf="@+id/imageView_taken"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>